    <view class="page__hd">
        <view class="page__desc">{{text1}}</view>
    </view>
    <view class="line"></view>
<view class="page__bd">
        <view class="weui-article">

            <view class="weui-article__section">
                <view class="weui-article__section">
                     <view class="weui-article__h1">Third Floor</view>
            <view class="weui-article__p">
                       {{text2}}</view>
                       <view class="weui-article__p">
                       {{image1}}</view>
                </view>
            </view>
            <view class="weui-article__section">
                <view class="weui-article__section">
                     <view class="weui-article__h1">Fourth Floor</view>
            <view class="weui-article__p">
                       {{text3}}</view>
                       <view class="weui-article__p">
                       {{image2}}</view>
                </view>
            </view>
            <view class="weui-article__section">
                <view class="weui-article__section">
                     <view class="weui-article__h1">注意事项</view>
            <view class="weui-article__p">
                       {{text4}}</view>
                       <view class="weui-article__p">
                       {{image3}}</view>
                </view>
         </view>
            </view>
        </view>
    </view>    